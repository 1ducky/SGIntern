generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum RequestStatus {
  Menunggu
  Diterima
  Ditolak
  Dibatalkan
}

// Membuat Model User
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  jurusan       String?
  keahlian      String?
  kelamin       String
  pendidikan    String?
  alamat        String
  kelas         String
  link          String?
  role          String    @default("Pelajar")
  DaftarMagang  DaftarMagang[]

 
  @@map("users")
}

model DaftarMagang {
  id          String @id @default(cuid())
  message     String?
  status      RequestStatus @default(Menunggu)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  magang      Magang    @relation(fields: [magangId], references: [id], onDelete: Cascade)
  magangId    String    
  createAt     DateTime @default(now())
  updatedAt    DateTime @updatedAt

  //cegah spam daftar magang yang sama
  @@unique([userId, magangId])

}
 
model Magang {
  id           String @id @default(cuid())
  name         String
  jurusan      String 
  keahlian     String
  deskripsi     String

  perusahaan  Perusahaan  @relation(fields: [perusahaanId], references: [id],onDelete: Cascade)
  perusahaanId String

  createAt     DateTime @default(now())
  updatedAt    DateTime @updatedAt
  DaftarMagang  DaftarMagang[]

}

model Lowongan {
  id           String @id @default(cuid())
  name         String
  jurusan      String 
  keahlian     String
  deskripsi     String

  perusahaan  Perusahaan  @relation(fields: [perusahaanId], references: [id],onDelete: Cascade)
  perusahaanId String

  createAt     DateTime @default(now())
  updatedAt    DateTime @updatedAt

}

model Perusahaan {
  id          String @id @default(cuid())
  name        String
  alamat      String
  deskripsi   String?
  imageUrl    String

  createAt     DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Magang      Magang[]
  Lowongan    Lowongan[]

  @@unique([name, alamat])
}